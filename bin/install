#!/usr/bin/env bash

install() {
  version=$2
  install_dir=$3

  build_dir=$(mktemp -d)
  cd $build_dir

  curl -fSL -JO https://github.com/mpv-player/mpv/archive/v$version.tar.gz
  tar -xf mpv*.tar.gz
  rm -rf mpv*.tar.gz
  cd mpv*
  meson setup build
  meson configure build --prefix=$install_dir
  meson compile -C build || exit 1
  meson install -C build || exit 1
  # ./bootstrap.py
  # ./waf configure --prefix=$install_dir
  # ./waf
  # ./waf install || exit 1
}

install $ASDF_INSTALL_TYPE $ASDF_INSTALL_VERSION $ASDF_INSTALL_PATH
