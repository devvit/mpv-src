#!/usr/bin/env bash

install() {
  version=$2
  install_dir=$3

  build_dir=$(mktemp -d)
  cd $build_dir

  curl -fSL -JO https://github.com/mpv-player/mpv/archive/v$version.tar.gz
  tar -xzf mpv*.tar.gz
  rm -rf mpv*.tar.gz
  cd mpv*
  ./bootstrap.py
  ./waf configure --prefix=$ASDF_INSTALL_PATH
  ./waf
  ./waf install || exit 1
}

install $ASDF_INSTALL_TYPE $ASDF_INSTALL_VERSION $ASDF_INSTALL_PATH
